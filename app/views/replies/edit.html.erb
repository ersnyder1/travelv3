<div class="page-header">
  <h2>Editing Your Reply about <%= @reply.request.travel_to_city %> for <%= @reply.request.user.full_name %> </h2>
</div>

<%= form_tag(reply_url(@reply), method: 'patch', class: 'form-horizontal') do %>


<%= hidden_field_tag :user_id, current_user.id %>
<%= hidden_field_tag :request_id, @reply.request_id%>



  <div class="form-group">
    <%= label_tag :reply_text, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :reply_text, @reply.reply_text, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Reply", class: 'btn btn-primary' %>
    </div>
  </div>

    <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= link_to 'Add a Photo to Existing Reply', new_photo_url, class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
