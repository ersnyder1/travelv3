<h2>Sign up</h2>
<div>
(fields marked with ** are mandatory)
</div>
<br>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
   
 
  <% if @user.errors.any? %>
  <ul>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <ul><%= message %></ul>
      </div>
      <% end %>
    </ul>
    <% end %>


  <div><%= f.label :first_name %>**<br />
  <%= f.text_field :first_name %></div>

    <div><%= f.label :last_name %>**<br />
  <%= f.text_field :last_name %></div>

      <div><%= f.label :home_city %><br />
  <%= f.text_field :home_city %></div>

      <div><%= f.label :home_state %><br />
  <%= f.text_field :home_state %></div>

        <div><%= f.label :home_country %><br />
  <%= f.text_field :home_country %></div>

         <div><%= f.label :photo_url %><br />
  <%= f.text_field :photo_url %></div>


  <div><%= f.label :email %>**<br />
  <%= f.text_field :email, :autofocus => true %></div>

  <div><%= f.label :user_name %>**<br />
  <%= f.text_field :user_name, :autofocus => true %></div>


  <div><%= f.label :password %>**<br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %>**<br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
